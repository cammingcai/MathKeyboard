<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sum_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sum_up_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sum_up_none"
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:background="@drawable/shape_dotted_stroke" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/icon_sum"/>

    <LinearLayout
        android:id="@+id/sum_down_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sum_down_none"
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:background="@drawable/shape_dotted_stroke"
            android:text="" />

    </LinearLayout>

</LinearLayout>