<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/power_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="1dp"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llyMultiplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMultiplierNone"
                android:layout_width="9dp"
                android:layout_height="12dp"
                android:background="@drawable/shape_dotted_stroke"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/llyMultiplier">

            <TextView
                android:id="@+id/tvPowerNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="1dp"
                android:minWidth="4dp"
                android:textSize="5sp"
                android:background="@drawable/shape_dotted_stroke"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>