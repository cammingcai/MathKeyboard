<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sqrt_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="1dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/multiple_root"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/multiple_none"
                android:background="@drawable/shape_dotted_stroke"
                android:layout_width="7dp"
                android:layout_height="9dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivSqrt"
            android:layout_width="26dp"
            android:layout_height="32dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/icon_sqrt"
            android:layout_toRightOf="@+id/multiple_root"
            android:layout_marginLeft="-6dp"/>

        <LinearLayout
            android:id="@+id/radicand_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/ivSqrt">

            <TextView
                android:id="@+id/radicand_none"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/shape_dotted_stroke" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="-4dp"
            android:background="@color/black"
            android:layout_alignRight="@+id/radicand_root"
            android:layout_toRightOf="@+id/ivSqrt"/>
    </RelativeLayout>

</LinearLayout>