<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--屏幕底部的dialog-->
    <style name="MathBottomDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/MathBottomToTopAnim</item>
    </style>

    <style name="MathBottomToTopAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_view_anim_enter</item>
        <item name="@android:windowExitAnimation">@anim/bottom_view_anim_exit</item>
    </style>

    <style name="btnLatterKeyboard">
        <item name="android:background">@drawable/btn_latter_keyboard_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

</resources>